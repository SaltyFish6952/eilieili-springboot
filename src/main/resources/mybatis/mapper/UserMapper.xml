<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.eilieili.demo.mapper.UserMapper">

    <select id="getUserByAccount" resultType="com.springboot.eilieili.demo.bean.User">
        SELECT userId, userName, userAccount, userLevel, userLevelProgress
        FROM User
        WHERE userAccount = #{userAccount}
    </select>

    <select id="getUserPasswordByAccount" resultType="String">
        SELECT userPassword
        FROM User
        WHERE userAccount = #{userAccount}
    </select>

    <!--    <select id="getUserPassword" resultType="String">-->
    <!--        SELECT userPassword FROM User WHERE userId=#{userId}-->
    <!--    </select>-->

</mapper>