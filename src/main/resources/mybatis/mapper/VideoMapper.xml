<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.eilieili.demo.mapper.VideoMapper">

    <select id="getVideoInfoById" resultType="com.springboot.eilieili.demo.bean.Video">
        SELECT *
        FROM Video
        WHERE videoId = #{videoId}
    </select>

    <select id="getVideosByUserId" resultType="com.springboot.eilieili.demo.bean.Video">
        SELECT *
        FROM Video
        WHERE userId = #{userId}
    </select>

    <select id="getVideosRamdom" resultType="com.springboot.eilieili.demo.bean.Video">
        SELECT *
        FROM Video
    </select>

    <select id="getVideos" resultType="com.springboot.eilieili.demo.bean.Video">
        SELECT *
        FROM Video
    </select>

    <select id="getVideosBySectorId" resultType="com.springboot.eilieili.demo.bean.Video">
        SELECT *
        FROM Video
        WHERE sectorId = #{sectorId}
    </select>


